	// currencyFormat.setCurrency(currency);
	// String formattedValue = currencyFormat.format(value);

	DecimalFormat df = new DecimalFormat("#.00");

	// return df.format(value) + " $";
	return df.format(value) + " \u20AC";
}

private void updateID(String id, Object value)
{
	ConfigProperty cp = cps.get(Integer.valueOf(id));

	if (cp != null)
	{
		update(cp, value);
	}
}

private ConfigProperty getConfigProperty(String id)
{
	return cps.get(Integer.valueOf(id));
}

public void resetOverride(String id)
{
	ConfigProperty cp = getConfigProperty(id);

	if (cp != null)
	{
		cp.resetOverride();
	}
	updateState();
	configPropertyEditor.fetch();
}

public Boolean isOverriden(String id)
{
	ConfigProperty cp = getConfigProperty(id);
	if (cp != null)
	{
		return cp.isOverriden();
	}
	else
	{
		return false;
	}
}

