<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4"
	xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>org.vaadin.smartgwt</display-name>
	<context-param>
		<description>
		Vaadin production mode</description>
		<param-name>productionMode</param-name>
		<param-value>false</param-value>
	</context-param>
	
	<servlet>
		<servlet-name>SmartGWT vaadin integration</servlet-name>
		<servlet-class>com.vaadin.terminal.gwt.server.ApplicationServlet</servlet-class>
		<init-param>
			<description>
			Vaadin application class to start</description>
			<param-name>application</param-name>
			<param-value>org.vaadin.smartgwt.SmartGWTApplication</param-value>
		</init-param>
		<init-param>
			<description>
			Application widgetset</description>
			<param-name>widgetset</param-name>
			<param-value>org.vaadin.smartgwt.SmartGWTWidgetset</param-value>
		</init-param>
	</servlet>

	<servlet-mapping>
		<servlet-name>SmartGWT vaadin integration</servlet-name>
		<url-pattern>/app/VAADIN/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>SmartGWT vaadin integration</servlet-name>
		<url-pattern>/app/*</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>imageServlet</servlet-name>
		<servlet-class> org.vaadin.smartgwt.server.ImageServer</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>imageServlet</servlet-name>
		<url-pattern>/imageFetcher/*</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
</web-app>